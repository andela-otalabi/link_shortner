<!-- REGISTRATION FORM -->
<div class="text-center" style="padding:50px 0">
  <div class="logo">Sign up</div>
  <!-- Main Form -->
  <div class="login-form-1">
  <%= form_for(@user, id: "register-form", class: "text-left" ) do |f| %>
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">
          <div class="form-group">
           <%= f.label :name %>
           <%= f.text_field :name, :id => "reg_name", :class => "text_input", :placeholder => "name" %> 
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, :id => "reg_email", :class => "text_input", :placeholder => "email" %> 
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, "Confirmation" %> 
            <%= f.password_field :password_confirmation %> 
          </div>
        </div>
        <%= f.submit "Sign Up", class: "login-button" %>
        <% end %>
        <i class="fa fa-chevron-right"></i>
      </div>
      </div>
    </div>
  </div>
  <!-- end:Main Form -->
</div>